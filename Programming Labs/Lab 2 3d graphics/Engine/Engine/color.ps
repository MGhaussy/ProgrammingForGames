struct PixelInputType
{
    float4 position : SV_POSITION;
    float4 color : COLOR;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 ColorPixelShader(PixelInputType input) : SV_TARGET
{
	input.color.r = input.color.r - (input.position.x / 1920);
	// input.color.g = input.color.g - (input.position.y / 1080);
	input.color.b = input.color.b - (input.position.y / 1080);
    return input.color;
}
